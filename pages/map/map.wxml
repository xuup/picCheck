<view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      show-location
    ></map>
  </view>

  <view class="btn-area">
    <button bindtap="getCenterLocation" class="page-body-button" type="primary">回到原点</button>
   
    <button bindtap="moveToLocation" class="page-body-button" type="primary">我的位置</button>
  </view>
</view>
